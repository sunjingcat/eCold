<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemeLight"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    <View-->

    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/status_bar_height"-->
    <!--        android:background="@color/colorPrimary" />-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius_3_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="智慧冷链"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:singleLine="true"
            android:src="@drawable/icon_user_main"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_radius_3_theme"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goodsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="6658" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="商品数"
                            android:textColor="#57B4E1"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goodsImportCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="6658" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="进口数"
                            android:textColor="#57B4E1"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goodsNoNucleicCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            tools:text="6658" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="缺失四证一报告"
                            android:textColor="#57B4E1"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/main_group_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group1"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="进货管理"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/main_group_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group4"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="出货管理"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/main_group_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group2"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="销售管理"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/main_group_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group5"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="进出货审核"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/main_group_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group3"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="销售台账"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/main_group_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_3_theme"
                    android:drawableTop="@drawable/image_group6"
                    android:drawablePadding="15dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:text="冷库台账"
                    android:textColor="#57B4E1"
                    android:textSize="15dp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>